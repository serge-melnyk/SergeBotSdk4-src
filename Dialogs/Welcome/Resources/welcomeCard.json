{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://kevalpatel2106.github.io/img/blog/open-weather-api/sun.png",
      "size": "stretch"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Welcome to Weather Bot1!",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": "yes",
      "text": "Type 'weather' to get weather data.",
      "wrap": true,
      "maxLines": 0
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Get weather from Sinoptik.ua",
      "url": "https://sinoptik.ua/"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Get weather from Gismeteo.ua",
      "url": "https://www.gismeteo.ua"
    }
  ]
}